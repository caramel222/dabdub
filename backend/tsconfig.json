{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2023",

    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "./dist",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "strict": false,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": false,
    "noEmitOnError": false,

    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@common/*": ["src/common/*"]
    },

    "incremental": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitThis": false,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "exclude": ["node_modules", "dist"]
}
